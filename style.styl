html
  height: 100%

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weigth: 300
  margin: 0
  height: 100%

window
  background-color: white
  display: flex
  flex-direction: column
  overflow: auto
  position: absolute
  resize: both
  padding: 3px
  border: 1px solid gray
  min-width: 100px
  min-height: 100px

  & > h2
    background-color: blue
    color: white
    margin: 0
    border-bottom: 1px solid gray

    & > .save
      width: 16px
      height: 16px
      margin: 5px

    & > .close, .save
      cursor: pointer
      float: right

  & > iframe
    border: none
    width: 100%
    flex: 2

  & > .drop-fix
    width: 100%
    height: 100%
    z-index: -1
    top: 0
    left: 0
    position: absolute

  &.drop-hover > .drop-fix
    z-index: 1

folder
  display: block
  width: 100%
  height: 100%
  overflow: auto
  z-index: 3

  & > .launcher
    cursor: pointer
    width: 64px
    margin: 1em
    display: inline-flex
    flex-direction: column
    align-items: center
    text-align: center

    & > .icon
      width: 48px
      height: 48px

desktop
  display: block
  width: 100%
  height: 100%
  position: relative

  & > .drag-fix
    z-Index: -1
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
